<div class="span-21" id="welcome">
  <h1>GitHub Contest Leaderboard</h1>
  <p></p>
</div>

<div class="span-4">
  &nbsp;
</div>

<div class="span-13">
  <center>
  <table class="leaderboard">
    <tr>
      <th>Entry</th>
      <th>High Score</th>
      <th>Percent Guessed</th>
    </tr>
  <% @entries.each do |e| %>
    <tr>
      <td><a href="/p/<%= e.owner %>/<%= e.name %>"><%= e.owner %>/<%= e.name %></a></td>
      <td><%= e.highscore %></td>
      <td><%= ((e.highscore.to_f / 4788.0) * 100).to_s[0, 5] %>%</td>
      <td><a href="http://github.com/<%= e.owner %>/<%= e.name %>">(code)</a></td>
    </tr>
  <% end %>
  </table>
  </center>
</div>

<div class="span-4 last">
  &nbsp;
</div>
